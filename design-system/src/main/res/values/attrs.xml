<!-- Formatting note: terminate all comments with a period, to avoid breaking
     the documentation output. To suppress comment lines from the documentation
     output, insert an eat-comment element after the comment lines.
-->

<resources>
    <!-- These are the standard attributes that make up a complete theme. -->
    <declare-styleable name="PerfectView">

        <attr name="iconPosition">
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>

        <attr name="headerText" format="string|reference"/>
        <attr name="subHeaderText" format="string|reference"/>
        <attr name="headerTextAppearance" format="reference" />
        <attr name="subHeaderTextAppearance" format="reference" />
        <attr name="iconSrc" format="reference" />
        <attr name="buttonEnabled" format="boolean" />
        <!-- Closable -> iconPosition - always left -->
        <attr name="isClosable" format="boolean" />
        <!-- Closable -> iconPosition - always left -->
        <attr name="isLight" format="boolean"/>

    </declare-styleable>
</resources>